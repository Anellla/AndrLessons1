<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <CheckBox
        android:id="@+id/grfr"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="73dp"
        android:layout_marginStart="73dp"
        android:layout_marginTop="8dp"
        android:text="Отобразить группу"
        app:layout_constraintBottom_toTopOf="@+id/grcherry"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/grcherry"
        android:layout_width="123dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:text="check cherry"
        app:layout_constraintBottom_toTopOf="@+id/grvish"
        app:layout_constraintStart_toStartOf="@+id/grfr"
        app:layout_constraintTop_toBottomOf="@+id/grfr" />

    <CheckBox
        android:id="@+id/grvish"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:text="check vishnya"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/grcherry"
        app:layout_constraintStart_toStartOf="@+id/grcherry"
        app:layout_constraintTop_toBottomOf="@+id/grcherry" />

</android.support.constraint.ConstraintLayout>